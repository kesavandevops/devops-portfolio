pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "ap-south-1"
        TF_WORKDIR = "05-serverless-aws/terraform"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Lambda Package') {
            steps {
                dir('05-serverless-aws') {
                    sh 'chmod +x build.sh'
                    sh './build.sh'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_WORKDIR}") {
                    withAWS(credentials: 'aws-credentials-id', region: "${AWS_DEFAULT_REGION}") {
                        sh 'terraform init -input=false'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_WORKDIR}") {
                    withAWS(credentials: 'aws-credentials-id', region: "${AWS_DEFAULT_REGION}") {
                        sh '''
                          export TF_LOG=DEBUG
                          export TF_LOG_PATH=terraform_debug.log
                        
                          # Run terraform in background
                          ( terraform plan -var-file="terraform.tfvars" -out=tfplan ) &
                        
                          TF_PID=$!
                        
                          # Wait with timeout
                          SECONDS=0
                          TIMEOUT=50
                        
                          while kill -0 $TF_PID 2>/dev/null; do
                            if [ $SECONDS -ge $TIMEOUT ]; then
                              echo "‚è±Ô∏è Timeout reached, killing Terraform (PID $TF_PID)"
                              kill -INT $TF_PID  # Graceful interrupt first
                              sleep 5
                              kill -9 $TF_PID || true  # Force kill if still alive
                              break
                            fi
                            sleep 1
                          done
                        
                          echo "üìÑ Terraform debug log:"
                          cat terraform_debug.log || echo "No log found"
                        '''
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${TF_WORKDIR}") {
                    withAWS(credentials: 'aws-credentials-id', region: "${AWS_DEFAULT_REGION}") {
                        sh 'terraform apply -input=false tfplan'
                    }
                }
            }
        }
    }

    post {
        always {
            dir("${TF_WORKDIR}") {
                sh 'terraform output'
            }
        }
        failure {
            echo "‚ùå Build or deploy failed."
        }
        success {
            echo "‚úÖ Deployment successful."
        }
    }
}



pipeline {
  agent any

  environment {
    AWS_REGION = 'ap-south-1'
    TF_VAR_aws_region = "${AWS_REGION}"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Prepare Lambda Package') {
      steps {
        dir('05-serverless-aws') {
          sh 'chmod +x build.sh && ./build.sh'
        }
      }
    }

    stage('Terraform Init') {
      steps {
        dir('05-serverless-aws/terraform') {
          sh 'terraform init'
        }
      }
    }

    stage('Terraform Validate') {
      steps {
        dir('05-serverless-aws/terraform') {
          sh 'terraform validate'
        }
      }
    }

    stage('Terraform Plan') {
      steps {
        dir('05-serverless-aws/terraform') {
          // Prevent hanging by piping 'yes' or using -input=false
          sh 'terraform plan -input=false -out=tfplan.out'
        }
      }
    }

    stage('Terraform Apply') {
      steps {
        dir('05-serverless-aws/terraform') {
          sh 'terraform apply -input=false tfplan.out'
        }
      }
    }
  }

  post {
    always {
      echo "Cleaning up Terraform files"
      dir('05-serverless-aws/terraform') {
        sh 'rm -f tfplan.out'
      }
    }
  }
}

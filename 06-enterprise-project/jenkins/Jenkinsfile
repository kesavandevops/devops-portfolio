pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        ECR_REPO = 'enterprise-devops-app'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        DOCKER_IMAGE = "326052702112.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO}:${IMAGE_TAG}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/kesavandevops/devops-portfolio.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('06-enterprise-project/app') {
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Scan Docker Image with Trivy') {
            steps {
                sh "trivy image --severity HIGH,CRITICAL --exit-code 1 $DOCKER_IMAGE"
            }
        }

        stage('Login to AWS ECR') {
            steps {
                withAWS(credentials: 'aws_creds', region: "${AWS_REGION}") {
                    sh '''
                    aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin 326052702112.dkr.ecr.$AWS_REGION.amazonaws.com
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh 'docker push $DOCKER_IMAGE'
            }
        }

        stage('Set Kubernetes Context') {
            steps {
                withAWS(credentials: 'aws_creds', region: "${AWS_REGION}") {
                    sh 'aws eks update-kubeconfig --name enterprise-eks-cluster --region ${AWS_REGION}'
                }
            }
        }

        stage('Deploy Application') {
            steps {
                dir('06-enterprise-project/ansible') {
                    sh 'ansible-playbook -i inventory/hosts.ini playbooks/deploy.yaml'
                }
            }
        }
        
        stage('Configure Logging') {
            steps {
                dir('06-enterprise-project/ansible') {
                    sh 'ansible-playbook -i inventory/hosts.ini playbooks/configure-logging.yaml'
                }
            }
        }
        
        stage('Configure Monitoring') {
            steps {
                dir('06-enterprise-project/ansible') {
                    sh 'ansible-playbook -i inventory/hosts.ini playbooks/configure-monitoring.yaml'
                }
            }
        }
    }

    post {
        success {
            slackSend(channel: '#devops-alerts', message: "✅ Deployment succeeded! Image: $DOCKER_IMAGE")
        }
        failure {
            slackSend(channel: '#devops-alerts', message: "❌ Deployment failed! Check Jenkins logs.")
        }
    }
}
